                            <!--<li><span class="badge">4</span>点击量排行博客内容</li>-->
                            <!--<li><span class="badge">5</span>点击量排行博客内容</li>-->
                            <%
                            for(var i=0;i<contentsByClick.length;i++){
                              var src="/blog/detail/Article?name="+contentsByClick[i]['name']+"&&title="+contentsByClick[i]['title']
                            %>
                            <% if(i==0) {%>
                            <li><span class="badge b_no1">1</span><a class="tit" href=<%=src%>><%=contentsByClick[i]['title']%></a><span class="name" style="display: none"><%=contentsByClick[i]['name']%></span></li>
