                            <%
                              var count=0;
                            for(var i=contentsAll.length-1;i>=0;i--){
                             count++;
                            if(count>5){    //最新文章的显示个数为5
                             break;
                            }
                             var src="/blog/detail/Article?name="+contentsAll[i]['name']+"&&title="+contentsAll[i]['title']
                            %>
                            <li><a class="tit" href=<%=src%>><%=contentsAll[i]['title']%></a><span class="name" style="display: none"><%=contentsAll[i]['name']%></span></li>
                            <%
                            }
                            %>
                        </ul>
                    </div>
                    <div class="clickRand">
                        <h4 class="title_nt">
                            <p style="background: white;width: 145px">点击<span style="color: red;">排行</span></p>
                        </h4>
                        <ul class="item_nt" style="padding: 0 23px">
